﻿@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-image: url('https://qcexclusive.com/wp-content/uploads/2024/01/BlankCeramicsHighRes2-10.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        color: white;
    }

    p.thick {
        font-family: "Times New Roman", Times, serif;
        text-align: center;
        margin-top: 0;
        font-size: 15px
    }

    h1.thick,
    h2.thick {
        font-family: "Times New Roman", Times, serif;
        font-weight: bold;
        margin-top: 0;
        color: #e6e1e1;
        text-align: center;
    }

    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .text-center {
        text-align: center;
    }

    .cta {
        border: none;
        background: none;
        cursor: pointer;
    }

        .cta span {
            padding-bottom: 7px;
            letter-spacing: 4px;
            font-size: 14px;
            padding-right: 15px;
            text-transform: uppercase;
        }

        .cta svg {
            transform: translateX(-8px);
            transition: all 0.3s ease;
        }

        .cta:hover svg {
            transform: translateX(0);
        }

        .cta:active svg {
            transform: scale(0.9);
        }

    .hover-underline-animation {
        position: relative;
        color: white;
        padding-bottom: 20px;
    }

        .hover-underline-animation:after {
            content: "";
            position: absolute;
            width: 100%;
            transform: scaleX(0);
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: white;
            transform-origin: bottom right;
            transition: transform 0.25s ease-out;
        }

    .cta:hover .hover-underline-animation:after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }


    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        background-color: rgba(117, 116, 114, 0.1);
        padding: 25px;
        text-align: center;
        color: white;
    }

    .column {
        flex: 40%;
        max-width: 40%;
        padding: 0 4px;
    }

</style>

<body>

    <div class="container">
        <div class="column">
            <div class="text-center">
                <h1 class="thick">KhumaloCraft Emporium</h1>
                <p class="thick">
                    Embrace the wild charm of South Africa with our whimsical pottery,
                    each piece a playful tribute to the vibrant landscapes and rich cultures of the region.
                </p>
                <button class="cta" onclick="location.href='https://localhost:7277/User/login';">
                    <span class="hover-underline-animation"> Shop now </span>
                    <svg id="arrow-horizontal"
                         xmlns="http://www.w3.org/2000/svg"
                         width="30"
                         height="10"
                         viewBox="0 0 46 16">
                        <path id="Path_10"
                              data-name="Path 10"
                              d="M8,0,6.545,1.455l5.506,5.506H-30V9.039H12.052L6.545,14.545,8,16l8-8Z"
                              transform="translate(30)"></path>
                    </svg>
                </button>
                
            </div>
        </div>
    </div>
</body>
