<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POE_CloudDev</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/POE_CloudDev.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        .navbar-nav .nav-item .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1); 
            border-radius: 5px; 
        }

        .navbar-nav.flex-grow-1.justify-content-end {
            margin-left: auto;
        }

        .footer {
            background-color: rgba(23, 23, 23,0.2);
            text-align: center;
            color: white;
        }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #2e2d2d; box-shadow: 0 1px 5px rgba(0,0,0,0.1);">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">KhumaloCraft Emporium</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"
                    <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="MyWork">My Shop</a>
                        </li>

                        @if (ViewData["UserID"] != null)
                        {
                            <ul class="navbar-nav align-content-end">
                                <li class="nav-item">
                                        <a align="right" class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        }
                         else
                        {
                            <ul class="navbar-nav align-content-end">
                                <li class="nav-item">
                                        <a align="right" class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                                </li>
                            </ul>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                        </li>

                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            @if (ViewContext.RouteData.Values["controller"].ToString() == "Product" && ViewContext.RouteData.Values["action"].ToString() == "MyWork")
                            {
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="AddProduct">Sell</a>
                </li>
                            }
    </ul>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="footer">
            &copy; 2024 - KhumaloCraft Emporium - <a asp-area="" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
